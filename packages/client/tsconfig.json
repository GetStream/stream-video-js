{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES2020",
    "target": "ES2020",
    "lib": [
      "esnext",
      "dom"
    ],
    "noEmitOnError": true,
    "noImplicitAny": true,
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "inlineSources": true,
  },
  "exclude": ["**/__tests__/**"],
  "include": [
    "./src",
    "index.ts",
    "version.ts"
  ]
}
