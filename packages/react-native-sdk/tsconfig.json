{
  "compilerOptions": {
    "target": "ES6",
    "declaration": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react"
  },
  "include": ["src"]
}
