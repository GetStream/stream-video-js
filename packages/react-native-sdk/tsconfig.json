{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "types": ["react-native", "jest"],
    "declaration": true,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "include": [
    "./src",
    "index.ts",
    "__tests__",
    "./jest-setup.ts",
    "version.ts"
  ],
  "exclude": ["./dist", "node_modules"]
}
