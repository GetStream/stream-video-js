{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES2015",
    "target": "ES2015",
    "lib": [
      "esnext",
    ],
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "jsx": "react-native",
  },
  "include": [
    "./src",
    "index.ts"
  ],
}
