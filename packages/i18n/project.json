{
  "name": "@stream-io/i18n",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "dryRun": false,
        "preset": "angular",
        "preid": "alpha",
        "releaseAs": "prerelease",
        "trackDeps": true,
        "push": false,
        "skipCommitTypes": ["chore", "ci"],
        "postTargets": ["@stream-io/i18n:github", "@stream-io/i18n:publish", "@stream-io/i18n:push"]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "yarn release:18n",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "push": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "git push -u origin --follow-tags",
            "forwardAllArgs": false
          }
        ]
      }
    }
  }
}
