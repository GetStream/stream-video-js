{
  "name": "@stream-io/video-react-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "dryRun": false,
        "preset": {
          "name": "conventionalcommits",
          "preMajor": true,
          "types": [
            {"type": "feat", "section": "Features"},
            {"type": "fix", "section": "Bug Fixes"},
            {"type": "chore", "hidden": true},
            {"type": "docs", "section": "Documentation"},
            {"type": "style", "hidden": true},
            {"type": "refactor", "hidden": true},
            {"type": "perf", "section": "Features"},
            {"type": "test", "hidden": true}
          ]
        },
        "trackDeps": true,
        "push": false,
        "skipCommitTypes": ["chore", "ci", "refactor", "test"],
        "postTargets": ["@stream-io/video-react-sdk:copy-version", "@stream-io/video-react-sdk:push", "@stream-io/video-react-sdk:github", "@stream-io/video-react-sdk:publish"]
      }
    },
    "copy-version": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "yarn copy-version:react-sdk ${version}",
            "forwardAllArgs": false
          },
          {
            "command": "git commit --amend --no-edit",
            "forwardAllArgs": false
          }
        ],
        "parallel": false
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "yarn release:react-sdk",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "push": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "git push && git push --tags",
            "forwardAllArgs": false
          }
        ]
      }
    }
  }
}
