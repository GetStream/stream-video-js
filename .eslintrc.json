{
  "env": {
    "browser": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "sourceType": "module"
  },
  "extends": [
    "react-app",
    "plugin:import/typescript"
  ],
  "settings": {
    "import/resolver": {
      "typescript": true
    }
  },
  "plugins": [
    "prettier"
  ],
  "ignorePatterns": ["node_modules"],
  "rules": {
    "prettier/prettier": "error",
    "no-shadow": "error",
    "import/no-extraneous-dependencies": "error"
  }
}
